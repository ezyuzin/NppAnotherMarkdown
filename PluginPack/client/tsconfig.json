{
  "compilerOptions": {
    "composite": true,
    "outDir": "../dist/html",
    "tsBuildInfoFile": "../dist/client/tsconfig.tsbuildinfo",
    "allowJs": true,
    "baseUrl": "./src",
    "rootDir": ".",
    "paths": {
      "@/*": ["./*"],
      "@lib/*": ["../../lib/src/*"],
      "@shared/*": ["../../shared/src/*"]
    },
    "lib": ["dom", "es2024", "ES2021.String", "esnext.asynciterable"],
    "target": "ES2024",
    "module": "ES2022",
    "moduleResolution": "bundler",
    "jsx": "react",

    "sourceMap": true, // Generate .map files
    "inlineSources": true, // Include original sources in map files
    "inlineSourceMap": false, // Don't embed source maps in JS
    "declaration": true, // Generate .d.ts files
    "removeComments": false, // Keep comments in output

    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "typeRoots": [
      "./node_modules/@types"
    ],
    "plugins": []
  },
  "exclude": ["./dist", "./es", "./node_modules", "**/.bak", "**/_bak", "*.bak", "*.d.ts"],
  "references": [],
  "include": [
    "src/",
  ],
  "ts-node": {
    "compiler": "ts-patch/compiler"
  }
}
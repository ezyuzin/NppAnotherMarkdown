  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug",
      "type": "node",
      "request": "launch",
      "runtimeArgs": ["-r", "ts-node/register"],
      "args": ["${workspaceFolder}/src/main.ts"]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Launch via Yarn ts-node (External Terminal)",
      "runtimeExecutable": "yarn",
      "runtimeArgs": [
        "ts-node",
        "-r", "tsconfig-paths/register",
        "--project", "server/tsconfig.json",
        "server/src/main.ts"
      ],
      "cwd": "${workspaceFolder}",
      "console": "externalTerminal"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "WebServer",
      "runtimeExecutable": "yarn",
      "runtimeArgs": [
        "ts-node",
        "-r", "tsconfig-paths/register",
        "--project", "server/tsconfig.json",
        "server/src/main.ts",
        "--webserver"
      ],
      "cwd": "${workspaceFolder}",
      "console": "externalTerminal"
    }
  ]
}
